{
  "title": "POC - GitHub Action Trigger",
  "description": "Test de conexion Dynatrace a GitHub Actions para restart de pods",
  "tasks": {
    "trigger_github_action": {
      "name": "trigger_github_action",
      "action": "dynatrace.automations:http-function",
      "description": "Dispara el GitHub Action via workflow_dispatch",
      "input": {
        "method": "POST",
        "url": "https://api.github.com/repos/Icarouscja/test-wd-dynatrace/actions/workflows/dynatrace-test.yml/dispatches",
        "headers": {
          "Accept": "application/vnd.github+json",
          "Authorization": "Bearer {{ .credential.TOKEN_POC_RESTART_PODS }}",
          "X-GitHub-Api-Version": "2022-11-28"
        },
        "payload": "{\"ref\":\"main\",\"inputs\":{\"event_type\":\"manual_test\",\"pod_name\":\"test-pod\",\"namespace\":\"default\",\"problem_id\":\"TEST-001\"}}"
      },
      "position": {
        "x": 0,
        "y": 1
      }
    }
  },
  "trigger": {
    "schedule": {
      "isActive": false,
      "trigger": {}
    }
  }
}
